<h3>Listing of Pets</h3>

<div class="filters">
Filter by
<%= form_for :filter do |f| %>
  <fieldset>
    <%= f.text_field :name, placeholder: 'Name of pet' %>
  </fieldset>
  <fieldset>
    <%= f.date_select :date_of_birth, start_year: 1980 %>
  </fieldset>
  <fieldset>
    <%= f.select(:pet_type, Pet.pet_types.keys.map {|pet_type| [pet_type.titleize,pet_type]}, prompt: 'Type of Pet') %>
  </fieldset>
  <fieldset>
    <%= f.submit 'Filter' %>
  </fieldset>
<% end %>
</div>


<table class="pets-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date of Birthday</th>
      <th>Type (dog, cat...)</th>
    </tr>
  </thead>
  <tbody>
    <% @pets.each do |pet| %>
    <tr>
      <td><%=pet.name%></td>
      <td><%=pet.date_of_birth%></td>
      <td><%=pet.pet_type%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @pets %>